    "class ImageFilter:\n",
    "    \"\"\"\n",
    "    A simple image filter class demonstrating array operations.\n",
    "    \n",
    "    Attributes:\n",
    "    -----------\n",
    "    image : np.ndarray\n",
    "        The image being processed\n",
    "    history : list\n",
    "        List of operations applied\n",
    "    \"\"\"\n",
    "    \n",
    "    def __init__(self, image):\n",
    "        \"\"\"\n",
    "        Initialize filter with an image.\n",
    "        \n",
    "        Parameters:\n",
    "        -----------\n",
    "        image : np.ndarray\n",
    "            Input image (2D grayscale or 3D RGB)\n",
    "        \"\"\"\n",
    "        self.original = image.copy()\n",
    "        self.image = image.copy()\n",
    "        self.history = [\"Original\"]\n",
    "    \n",
    "    def brightness(self, delta):\n",
    "        \"\"\"Adjust brightness by delta.\"\"\"\n",
    "        self.image = adjust_brightness(self.image, delta)\n",
    "        self.history.append(f\"Brightness {delta:+d}\")\n",
    "        return self\n",
    "    \n",
    "    def contrast(self, alpha):\n",
    "        \"\"\"Adjust contrast by factor alpha.\"\"\"\n",
    "        self.image = adjust_contrast(self.image, alpha)\n",
    "        self.history.append(f\"Contrast {alpha:.1f}x\")\n",
    "        return self\n",
    "    \n",
    "    def reset(self):\n",
    "        \"\"\"Reset to original image.\"\"\"\n",
    "        self.image = self.original.copy()\n",
    "        self.history = [\"Original\"]\n",
    "        return self\n",
    "    \n",
    "    def show(self, title=None):\n",
    "        \"\"\"Display current image.\"\"\"\n",
    "        plt.figure(figsize=(8, 6))\n",
    "        if len(self.image.shape) == 2:\n",
    "            plt.imshow(self.image, cmap='gray', vmin=0, vmax=255)\n",
    "        else:\n",
    "            plt.imshow(self.image)\n",
    "        \n",
    "        title = title or ' -> '.join(self.history)\n",
    "        plt.title(title, fontsize=12, fontweight='bold')\n",
    "        plt.axis('off')\n",
    "        plt.colorbar(label='Pixel Intensity' if len(self.image.shape) == 2 else '')\n",
    "        plt.tight_layout()\n",
    "        plt.show()\n",
    "        \n",
    "        return self\n",
    "    \n",
    "    def stats(self):\n",
    "        \"\"\"Print image statistics.\"\"\"\n",
    "        print(\"Image Statistics:\")\n",
    "        print(f\"  Shape: {self.image.shape}\")\n",
    "        print(f\"  Mean: {self.image.mean():.2f}\")\n",
    "        print(f\"  Std: {self.image.std():.2f}\")\n",
    "        print(f\"  Min: {self.image.min()}\")\n",
    "        print(f\"  Max: {self.image.max()}\")\n",
    "        return self\n",
    "\n",
    "# Test the ImageFilter class\n",
    "print(\"Testing ImageFilter class...\")\n",
    "\n",
    "filter_obj = ImageFilter(original_image)\n",
    "filter_obj.brightness(30).contrast(1.5).stats()\n",
    "filter_obj.show()"
   ]
