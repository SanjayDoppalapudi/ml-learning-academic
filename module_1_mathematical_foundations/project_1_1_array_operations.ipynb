    "# Create a simple synthetic image\n",
    "def create_test_image(size=256):\n",
    "    \"\"\"\n",
    "    Create a test image with gradient and shapes.\n",
    "    Returns a 2D numpy array representing a grayscale image.\n",
    "    \"\"\"\n",
    "    # Create gradient background\n",
    "    x = np.linspace(0, 255, size)\n",
    "    y = np.linspace(0, 255, size)\n",
    "    X, Y = np.meshgrid(x, y)\n",
    "    \n",
    "    # Create diagonal gradient\n",
    "    image = (X + Y) / 2\n",
    "    \n",
    "    # Add some geometric shapes\n",
    "    # Circle in center\n",
    "    center = size // 2\n",
    "    radius = size // 4\n",
    "    for i in range(size):\n",
    "        for j in range(size):\n",
    "            dist = np.sqrt((i - center)**2 + (j - center)**2)\n",
    "            if dist < radius:\n",
    "                image[i, j] = 200  # Light circle\n",
    "    \n",
    "    # Add a rectangle\n",
    "    rect_x, rect_y = size // 8, size // 8\n",
    "    rect_w, rect_h = size // 4, size // 4\n",
    "    image[rect_y:rect_y+rect_h, rect_x:rect_x+rect_w] = 50  # Dark rectangle\n",
    "    \n",
    "    return image.astype(np.uint8)\n",
    "\n",
